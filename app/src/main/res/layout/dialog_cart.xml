<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/black"
            android:text="Hóa đơn"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nameSellerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Tên nhân viên"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray01"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cardItemsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:listitem="@layout/row_cart_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <RelativeLayout
            android:id="@+id/pricesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--promo code-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/promoRl"
                android:background="@drawable/shap_rect_3"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/promoLabelTv"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="Mã giảm giá"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promoLabelTv"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/validateBtn"
                    android:hint="Mã giảm giá"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray01"
                    android:id="@+id/promoCodeEt"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/validateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/promoLabelTv"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:tint="@color/white"
                    app:fabSize="mini"
                    android:src="@drawable/ic_send"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/promoDescriptionTv"
                    android:text="Mã giảm 200000"
                    android:textSize="12sp"
                    android:textColorHint="@color/gray01"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:layout_below="@+id/promoCodeEt"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/applyBtn"
                    android:layout_below="@+id/promoDescriptionTv"
                    android:text="Áp dụng"
                    android:textColor="@color/white"
                    android:background="@color/primary"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/sTotalLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Tổng cộng:"
                android:textStyle="bold"
                android:layout_below="@+id/promoRl"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/sTotalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="25000.đ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/promoRl"
                android:textColor="@color/black"/>

            <!--display promo-->
            <TextView
                android:id="@+id/discountLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sTotalLabelTv"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="Giảm giá"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discountTv"
                android:layout_below="@+id/sTotalLabelTv"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="200000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/totalLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Thành tiền:"
                android:layout_below="@+id/discountLabelTv"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/totalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="15000.đ"
                android:layout_below="@+id/discountLabelTv"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="15dp"
            android:text="Đặt Hàng"
            android:textColor="@color/white"/>
    </LinearLayout>

</ScrollView>