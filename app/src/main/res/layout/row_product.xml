<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="25dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardMaxElevation="6dp"
    android:padding="5dp"
    >
    <!--cardView-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/productIconIv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="15dp"
            app:riv_corner_radius="6dp"
            android:src="@drawable/ic_cart"/>

<!--        <ImageView-->
<!--            android:id="@+id/productIconIv"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="90dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:layout_marginStart="5dp"-->
<!--            android:src="@drawable/ic_cart"/>-->

<!--        <TextView-->
<!--            android:id="@+id/discountedNoteTv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="10sp"-->
<!--            android:padding="5dp"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:text="Giảm giá 10%"-->
<!--            android:layout_marginLeft="95dp"-->
<!--            android:background="@drawable/shape_border_sale"-->
<!--            android:textColor="@color/green"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/productIconIv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:id="@+id/saleTv">
<!--                <TextView-->
<!--                    android:id="@+id/discountedNoteTv"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="10sp"-->
<!--                    android:padding="5dp"-->
<!--                    android:layout_marginTop="3dp"-->
<!--                    android:text="Giảm giá 10%"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:background="@drawable/shape_border_sale"-->
<!--                    android:textColor="@color/green"/>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/titleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_marginLeft="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/discountedNoteTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_border_sale"
                        android:padding="3dp"
                        android:text="Giảm giá 10%"
                        android:textColor="@color/green"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/productDes"
                    android:layout_marginLeft="10dp"
                    android:text="Nước tăng lực sting lốc 12 chai dung tích 500ml"
                    android:textSize="14dp"
                    android:textColor="@color/gray02"/>
                <TextView
                    android:id="@+id/quantityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Lốc 12 chai"
                    android:textSize="14dp"
                    android:drawableStart="@drawable/ic_description"
                    android:textColor="@color/gray02"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money"
                        android:id="@+id/imgTien"/>
                    <TextView
                        android:id="@+id/discountedPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90000"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/imgTien"
                        android:textColor="@color/cam"/>

                    <TextView
                        android:layout_toEndOf="@id/discountedPriceTv"
                        android:id="@+id/originalPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="100000"
                        android:textColor="@color/cam"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/nextIv"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_next"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>