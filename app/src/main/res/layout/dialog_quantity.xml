<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/headRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_cart">
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/productIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cart"/>
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/productIv"
            android:layout_marginTop="5dp"
            android:text="Product title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/pQuantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/titleTv"
            android:textSize="15sp"
            android:text="Quantity"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pQuantityTv"
            android:text="Description"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/discountedNoteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="120dp"
            android:layout_marginTop="5dp"
            android:text="10% off"
            android:padding="5dp"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:background="@drawable/shape_rect02"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvGiatien"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:text="Giá"/>
        <TextView
            android:id="@+id/giaGiamTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@id/tvGiatien"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Giảm giá"/>
        <TextView
            android:id="@+id/tongGiaTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentEnd="true"
            android:text="Tổng"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/botRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_item">
        <TextView
            android:id="@+id/originalPriceTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="12000d"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/priceDiscountedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/originalPriceTv"
            android:text="10000d"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/finalPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:text="9000d"
            android:layout_marginRight="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/decrementBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_remove"/>
        <TextView
            android:id="@+id/quantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <ImageButton
            android:id="@+id/incrementBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_add1"/>
    </LinearLayout>
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#9FEDE6"
        android:padding="5dp"
        android:text="Thêm vào giỏ"
        android:textAllCaps="false"/>
</LinearLayout>