<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ChartSellerActivity">
    <!--toobar-->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:background="@null"/>
        <TextView
            android:id="@+id/masellerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Thông tin nhân viên"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarRl"
        android:id="@+id/infodetails"
        android:layout_marginTop="20dp">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/iconIv"
            android:layout_marginLeft="35dp"
            app:c_border="true"
            app:c_border_color="@color/primary"
            app:c_border_width="1dp"
            android:src="@drawable/ic_person_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIv"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dsTv"
            android:textColor="@color/black"
            android:text="Tổng doanh số trong ngày"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doanhSoTv"
            android:layout_below="@+id/dsTv"
            android:textColor="@color/primary"
            android:layout_toEndOf="@+id/profileIv"
            android:drawableStart="@drawable/ic_money"
            android:layout_marginLeft="49dp"
            android:text="123 000 000 "
            android:textSize="30sp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/infodetails"
        android:id="@+id/btnChart"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Doanh Thu Theo Ngày"
            android:layout_marginStart="9dp"
            android:textSize="7sp"
            android:id="@+id/btnChartDay"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTv"
                android:text="12/12/2021"
                android:layout_marginLeft="55dp"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnChart"
        android:id="@+id/doanhThuThang"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:id="@+id/chitieuTxt"
            android:text="Chỉ tiêu đã đạt được trong tháng này: "/>
        <TextView
            android:id="@+id/chiTieuTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="5,000,000 VND"
            android:textSize="20dp"/>
    </LinearLayout>

    <!--chartDay-->
    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:id="@+id/barChart"
        android:layout_below="@+id/doanhThuThang">
    </com.github.mikephil.charting.charts.BarChart>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIỂU ĐỒ DOANH THU TRONG NGÀY"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_below="@+id/barChart"
        android:layout_marginTop="5dp"
        android:textAlignment="center"/>

</RelativeLayout>